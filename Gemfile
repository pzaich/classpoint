  gem 'sass-rails',   '~> 3.2.3'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
	gem 'haml-rails'
	gem 'rspec-rails'
	gem 'guard'
	gem 'guard-rspec'
	gem 'quiet_assets'
end

group :test do
	gem 'shoulda-matchers'
	gem 'faker'
end

gem 'fabrication'
gem 'haml'
